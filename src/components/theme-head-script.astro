---
import { USER_THEME_STORAGE_KEY } from '~/libs/stores/theme';
---

<script is:inline define:vars={{ USER_THEME_STORAGE_KEY }}>
  const userTheme = localStorage.getItem(USER_THEME_STORAGE_KEY);

  if (
    userTheme === 'dark' ||
    (userTheme === 'system' &&
      window.matchMedia('(prefers-color-scheme: dark)').matches)
  ) {
    document.documentElement.classList.add('dark');
  }
</script>
