import { isProd } from "~/libs/utils";
---

{/* google analytics */}
{isProd && <script async src={`https://www.googletagmanager.com/gtag/js?id=${import.meta.env.PUBLIC_GA_ID}`}></script>}
<script>
  // @ts-nocheck
  import { isProd } from "~/libs/utils";
 
  if(isProd) {
    const ga_id = import.meta.env.PUBLIC_GA_ID;

    window.dataLayer = window.dataLayer || [];
    function gtag(args) {
      dataLayer.push(...args);
    }
    gtag('js', new Date());
    gtag('config', ga_id);
  }
</script>

